{
  "extends": "@polkadot/dev/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "jest/**/*",
    "scripts/**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "paths": {
      "@polkadot/apps/*": ["packages/apps/src/*"],
      "@polkadot/apps": ["packages/apps/src"],
      "@polkadot/apps-config": [ "packages/apps-config/src" ],
      "@polkadot/apps-config/*": [ "packages/apps-config/src/*" ],
      "@polkadot/apps-routing": [ "packages/apps-routing/src" ],
      "@polkadot/apps-routing/*": [ "packages/apps-routing/src/*" ],
      "@polkadot/app-accounts": [ "packages/page-accounts/src" ],
      "@polkadot/app-accounts/*": [ "packages/page-accounts/src/*" ],
      "@polkadot/app-nft-wallet": [ "packages/page-nft-wallet/src" ],
      "@polkadot/app-nft-wallet/*": [ "packages/page-nft-wallet/src/*" ],
      "@polkadot/app-nft-market": [ "packages/page-nft-market/src" ],
      "@polkadot/app-nft-market/*": [ "packages/page-nft-market/src/*" ],
      "@polkadot/app-nft-trades": [ "packages/page-nft-trades/src" ],
      "@polkadot/app-nft-trades/*": [ "packages/page-nft-trades/src/*" ],
      "@polkadot/app-faq": [ "packages/page-faq/src" ],
      "@polkadot/app-faq/*": [ "packages/page-faq/src/*" ],
      "@polkadot/react-api": [ "packages/react-api/src" ],
      "@polkadot/react-api/*": [ "packages/react-api/src/*" ],
      "@polkadot/react-components": [ "packages/react-components/src" ],
      "@polkadot/react-components/*": [ "packages/react-components/src/*" ],
      "@polkadot/react-hooks": [ "packages/react-hooks/src" ],
      "@polkadot/react-hooks/*": [ "packages/react-hooks/src/*" ],
      "@polkadot/react-params": [ "packages/react-params/src" ],
      "@polkadot/react-params/*": [ "packages/react-params/src/*" ],
      "@polkadot/react-query": [ "packages/react-query/src" ],
      "@polkadot/react-query/*": [ "packages/react-query/src/*" ],
      "@polkadot/react-signer": [ "packages/react-signer/src" ],
      "@polkadot/react-signer/*": [ "packages/react-signer/src/*" ],
      "@polkadot/test-support/": [ "packages/test-support/src/" ],
      "@polkadot/test-support/*": [ "packages/test-support/src/*" ],
      "@polkadot/types/": [ "packages/types/" ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
